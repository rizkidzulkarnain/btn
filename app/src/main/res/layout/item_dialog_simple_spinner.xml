<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="dialogSimpleSpinnerItemVM"
            type="com.mitkoindo.smartcollection.dialog.DialogSimpleSpinnerItemViewModel"/>
    </data>

    <TextView
        android:id="@+id/tv_name"
        style="@style/FontRegular.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_12"
        android:paddingBottom="@dimen/padding_12"
        android:paddingLeft="@dimen/padding_medium"
        android:paddingRight="@dimen/padding_medium"
        android:text="@{dialogSimpleSpinnerItemVM.name}"
        android:background="@color/White"
        android:onClick="@{dialogSimpleSpinnerItemVM.onItemClicked}" />

</layout>