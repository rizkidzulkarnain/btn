<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Theme style buat no toolbar-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EditText.Login" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorControlNormal">@color/White</item>
        <item name="colorControlActivated">@color/White</item>
        <item name="colorControlHighlight">@color/White</item>
    </style>

    <style name="EditText.UpdatePassword" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorControlNormal">@color/Line_UpdatePassword</item>
        <item name="colorControlActivated">@color/Line_UpdatePassword</item>
        <item name="colorControlHighlight">@color/Line_UpdatePassword</item>
    </style>

    <style name="EditText.BroadcastBerita" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/Font_BroadcastBerita_Form</item>
        <item name="android:textColorHint">@color/Font_BroadcastBerita_Form</item>
        <item name="colorControlActivated">@color/Grey15</item>
        <item name="colorControlHighlight">@color/Grey15</item>
    </style>

    <style name="TabLayoutNotAllCaps" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
    
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Font-->
    <style name="FontRegular">
        <item name="fontPath">@string/font_default_reg</item>
    </style>
    <style name="FontBold">
        <item name="fontPath">@string/font_default_bold</item>
    </style>

    <style name="FontRegular.Title" parent="FontRegular">
        <item name="android:textSize">@dimen/text_title</item>
    </style>
    <style name="FontRegular.Medium" parent="FontRegular">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>
    <style name="FontRegular.Small" parent="FontRegular">
        <item name="android:textSize">@dimen/text_small</item>
    </style>
    <style name="FontRegular.Smaller" parent="FontRegular">
        <item name="android:textSize">@dimen/text_smaller</item>
    </style>

    <style name="FontBold.Title" parent="FontBold">
        <item name="android:textSize">@dimen/text_title</item>
    </style>
    <style name="FontBold.Medium" parent="FontBold">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>
    <style name="FontBold.Small" parent="FontBold">
        <item name="android:textSize">@dimen/text_small</item>
    </style>
    <style name="FontBold.Smaller" parent="FontBold">
        <item name="android:textSize">@dimen/text_smaller</item>
    </style>

    <style name="FontRegular.Title.White" parent="FontRegular.Title">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/White</item>
    </style>
    <style name="FontRegular.Medium.White" parent="FontRegular.Medium">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/White</item>
    </style>
    <style name="FontRegular.Small.White" parent="FontRegular.Small">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/White</item>
    </style>
    <style name="FontRegular.Smaller.White" parent="FontRegular.Smaller">
        <item name="android:textSize">@dimen/text_smaller</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="FontBold.Title.White" parent="FontBold.Title">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/White</item>
    </style>
    <style name="FontBold.Medium.White" parent="FontBold.Medium">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/White</item>
    </style>
    <style name="FontBold.Small.White" parent="FontBold.Small">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/White</item>
    </style>
    <style name="FontBold.Smaller.White" parent="FontBold.Small">
        <item name="android:textSize">@dimen/text_smaller</item>
        <item name="android:textColor">@color/White</item>
    </style>


    <!--Toolbar-->
    <style name="AppToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="AppToolbar.BottomShadow">
        <item name="android:background">@drawable/toolbar_shadowed_down_bg</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
    </style>

    <style name="AppToolbar.Line">
        <item name="android:background">@drawable/toolbar_down_line</item>
        <item name="android:paddingBottom">@dimen/padding_1</item>
    </style>


    <style name="AppToolbarActionButton">
        <item name="android:layout_width">?attr/actionBarSize</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

	<!--Tab-->
    <style name="TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorHeight">@dimen/padding_small</item>
        <item name="tabIndicatorColor">@color/White</item>
        <item name="tabSelectedTextColor">@color/White</item>
        <item name="tabTextAppearance">@style/AppTextHomeTab</item>
    </style>

    <style name="AppTextHomeTab">
        <item name="fontPath">@string/font_default_bold</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
	
</resources>
